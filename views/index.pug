extends layout
block content
  form(class='questionContainer' name='questionForm' method='post' action='/fauxtweet')
    div(class='input-field people')
      input(type='text' required name='people' class='qField people') 
      label(for='people' class='qLabel') Person
      div(class='helper') Ex: David Hasselhoff
    div(class='input-field places')
      input(type='text' required name='places' class='qField place') 
      label(for='places' class='qLabel') Place
      div(class='helper') Ex: Disney Land
    div(class='input-field organizations')
      input(type='text' required name='organizations' class='qField org') 
      label(for='organizations' class='qLabel') Organization
      div(class='helper') Ex: The Boy Scouts
    div(class='input-field acronyms')
      input(type='text' required name='acronyms' class='qField acronym') 
      label(for='acronyms' class='qLabel') Acronym
      div(class='helper') Ex: FBI
    div(class='buttonBox')
      button(class='btn waves-effect waves-light submitButton' type="submit" name="action" value='Submit') Submit
