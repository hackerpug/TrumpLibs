extends layout
block content
  form(class='questionContainer' name='questionForm' method='post' action='/fauxtweet')
    div(class='input-field people')
      input(type='text' required name='people' class='qField people') 
      label(for='people' class='qLabel') Person
      div(class='helper') Ex: David Hasselhoff
    div(class='input-field place')
      input(type='text' required name='place' class='qField place') 
      label(for='place' class='qLabel') Place
      div(class='helper') Ex: Disney Land
    //- div(class='input-field hashtag')
    //-   input(type='text' required name='hashtag' class='qField hashtag') 
    //-   label(for='hashtag' class='qLabel') Hashtag
    //-   div(class='helper') Ex: #Freedom
    div(class='input-field org')
      input(type='text' required name='org' class='qField org') 
      label(for='org' class='qLabel') Organization
      div(class='helper') Ex: The Boy Scouts
    div(class='input-field acronym')
      input(type='text' required name='acronym' class='qField acronym') 
      label(for='acronym' class='qLabel') Acronym
      div(class='helper') Ex: FBI
    div(class='buttonBox')
      input(class='waves-effect waves-light btn-large submitButton' type='submit' value='Submit')
